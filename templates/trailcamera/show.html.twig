{# @var trailcamera \Pimcore\Model\DataObject\trailcamera #}

{% extends 'layouts/stealthcam.html.twig' %}


{% block content %}

    <div class="ItemName">
        <h1>{{ trailcamera.ProductName }}</h1>
    </div>
    <div class="Left_Content">
        <div class="Item_details">
            <h1>TYPE: TrailCamera</h1>
            <h1>SKU: {{ trailcamera.SKU }}</h1>
            <h1>UPC: {{ trailcamera.UPC }}</h1>
        </div>
        <div class="Prod_Feature">
            <h1>PRODUCT FEATURES</h1>
            {{ trailcamera.Description|raw }}
        </div>
        <div class="Prod_Specs">
            <h1>PRODUCT SPECS</h1>
            <ul style="list-style-type:circle">
                {#<p><b>MATERIAL:</b>{{ trailcamera.Material }}</p>#}
                {#<p><b>COLOR:</b>{{ trailcamera.Color }}</p>#}
                {#<p><b>LOGO:</b>{{ trailcamera.Logo }}</p>#}
                {#<p><b>NECKLINE:</b>{{ trailcamera.Neckline }}</p>#}
                {#<p><b>MATERIAL SPECS:</b>{{ trailcamera.MaterialSpecs }}</p>#}
            </ul>
        </div>
    </div>
    <div class="Right_content">
        <div class="Item_img">
            {% if trailcamera.AssetAdvanced %}
				{{ trailcamera.AssetAdvanced.thumbnail("content").html|raw }}
			{% endif %}
        </div>
        <div class="Item_img_1">
            <img src="C:\Users\amurugesan.GSMORG\Downloads\MUD-BBB5010_01.png">
        </div>
        <div class="Item_img_2">
            <img src="C:\Users\amurugesan.GSMORG\Downloads\MUD-BBB5010_01.png">
        </div>
        <div class="Item_img_3">
            <img src="C:\Users\amurugesan.GSMORG\Downloads\MUD-BBB5010_01.png">
        </div>
        <div class="Item_img_4">
            <img src="C:\Users\amurugesan.GSMORG\Downloads\MUD-BBB5010_01.png">
        </div>
        <div class="ItemStatus">
            <label for="Status">Item Status-</label>
            <select name="Item Status" id="Status">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
        </div>
        <div class="VAM">
            <h1>View All Media</h1>
        </div>
        <div class="MSRP">
            <h1>{{ trailcamera.PriceType }} : ${{ trailcamera.Price }} </h1>
        </div>
        <div class="Available">
            <label for="Available">Item Status-</label>
            <select name="Availablility" id="Available">
                <option value="In Stock">In Stock</option>
                <option value="Out of Stock">Out of Stock</option>
              </select>
        </div>
        <div class="LBtn">
            <a href="#" class="btn_1">Save</a>
