{# @var climbingsystems \Pimcore\Model\DataObject\climbingsystems #}

{% extends 'layouts/layout.html.twig' %}


{% block content %}

    <div class="ItemName">
        <h1>{{ climbingsystems.ProductName }}</h1>
    </div>
    <div class="Left_Content">
        <div class="Item_details">
            <h1>TYPE: climbingsystems</h1>
            <h1>SKU: {{ climbingsystems.SKU }}</h1>
            <h1>UPC: {{ climbingsystems.UPC }}</h1>
            <h1>Global Trade Item Number: {{ climbingsystems.GlobalTradeItemNumber }}</h1>
        </div>
        <div class="Prod_Feature">
            <h1>PRODUCT FEATURES</h1>
            {{ climbingsystems.Description|raw }}
        </div>
        <div class="Prod_Specs">
            <h1>PRODUCT SPECS</h1>
            <ul style="list-style-type:circle">
                <p><b>PRODUCT WIDTH:</b>{{ climbingsystems.ProductWidth }}</p>
                <p><b>PRODUCT HEIGHT:</b>{{ climbingsystems.ProductHeight }}</p>
                <p><b>PRODUCT DEPTH:</b>{{ climbingsystems.ProductDepth }}</p>
                <p><b>CONSTRUCTION:</b>{{ climbingsystems.Construction }}</p>
                <p><b>TOTAL HEIGHT:</b>{{ climbingsystems.TotalHeight }}</p>
                <p><b>HEIGHT PER SECTION:</b>{{ climbingsystems.HeightPerSection }}</p>
                <p><b>SECTION:</b>{{ climbingsystems.Section }}</p>
                <p><b>STEP WIDTH:</b>{{ climbingsystems.StepWidth }}</p>
                <p><b>PACKABLE:</b>{{ climbingsystems.Packable }}</p>
                <p><b>FASTNERS:</b>{{ climbingsystems.Fastners }}</p>
                <p><b>TOTAL WEIGHT:</b>{{ climbingsystems.TotalWeight }}</p>
                <p><b>WEIGHT PER SECTION:</b>{{ climbingsystems.WeightPerSection }}</p>
                <p><b>WEIGHT RATING:</b>{{ climbingsystems.WeightRating }}</p>
                <p><b>TREE SIZE:</b>{{ climbingsystems.TreeSize }}</p>
            </ul>
        </div>
    </div>
    <div class="Right_content">
        <div class="Item_img">
            {% if climbingsystems.AssetAdvanced %}
				{{ climbingsystems.AssetAdvanced.thumbnail("content").html|raw }}
			{% endif %}
        </div>
        {% block Assets %}
			{% set additionalImages = climbingsystems.Assets %}
			{% set sum = 1 %}
			{%  if(additionalImages) %}

					{% for image in additionalImages %}

						<div class="Item_img_{{ sum }}">
							
								{{ image.thumbnail.getHTML({imgAttributes: {class: 'img-thumbnail1 img-fluid'}})|raw }}
							
						</div>
					{% set sum = sum + 1 %}
					{% endfor %}

			{%  endif %}
		{% endblock %}
		<div class="ItemStatus">
            <label for="Status">Item Status-</label>
            <select name="Item Status" id="Status">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
        </div>
        <div class="VAM">
            <h1>View All Media</h1>
        </div>
        <div class="MSRP">
            <h1>{{ climbingsystems.PriceType }} : ${{ climbingsystems.Price }} </h1>
        </div>
        <div class="Available">
            <label for="Available">Item Availablility-</label>
            <select name="Availablility" id="Available">
                <option value="In Stock">In Stock</option>
                <option value="Out of Stock">Out of Stock</option>
              </select>
        </div>
        <div class="LBtn">
            <a href="#" class="btn_1">Save</a>
            <a href="#" class="btn_2">Submit for Approval</a>
            <a href="#" class="btn_3">Cancel</a>  
        </div>
    </div>

{% endblock %}




















