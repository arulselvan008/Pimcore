{# @var safetysystems \Pimcore\Model\DataObject\safetysystems #}

{% extends 'layouts/layout.html.twig' %}


{% block content %}

    <div class="ItemName">
        <h1>{{ safetysystems.ProductName }}</h1>
    </div>
    <div class="Left_Content">
        <div class="Item_details">
            <h1>TYPE: safetysystems</h1>
            <h1>SKU: {{ safetysystems.SKU }}</h1>
            <h1>UPC: {{ safetysystems.UPC }}</h1>
            <h1>Global Trade Item Number: {{ safetysystems.GlobalTradeItemNumber }}</h1>
        </div>
        <div class="Prod_Feature">
            <h1>PRODUCT FEATURES</h1>
            {{ safetysystems.Description|raw }}
        </div>
        <div class="Prod_Specs">
            <h1>PRODUCT SPECS</h1>
            <ul style="list-style-type:circle">
                <p><b>PRODUCT WIDTH:</b>{{ safetysystems.ProductWidth }}</p>
                <p><b>PRODUCT HEIGHT:</b>{{ safetysystems.ProductHeight }}</p>
                <p><b>PRODUCT DEPTH:</b>{{ safetysystems.ProductDepth }}</p>
                <p><b>CONSTRUCTION:</b>{{ safetysystems.Construction }}</p>
                <p><b>USE:</b>{{ safetysystems.Use }}</p>
                <p><b>LENGTH:</b>{{ safetysystems.Length }}</p>
                <p><b>WEIGHT RATING:</b>{{ safetysystems.WeightRating }}</p>
                <p><b>BUCKLES</b>{{ safetysystems.Buckles }}</p>
                <p><b>WEIGHT:</b>{{ safetysystems.Weight }}</p>
                <p><b>PATTERN:</b>{{ safetysystems.Pattern }}</p>
                <p><b>LOOP:</b>{{ safetysystems.Loop }}</p>
                <p><b>SIZE:</b>{{ safetysystems.Size }}</p>
            </ul>
        </div>
    </div>
    <div class="Right_content">
        <div class="Item_img">
            {% if safetysystems.AssetAdvanced %}
				{{ safetysystems.AssetAdvanced.thumbnail("content").html|raw }}
			{% endif %}
        </div>
        {% block Assets %}
			{% set additionalImages = safetysystems.Assets %}
			{% set sum = 1 %}
			{%  if(additionalImages) %}

					{% for image in additionalImages %}

						<div class="Item_img_{{ sum }}">
							
								{{ image.thumbnail.getHTML({imgAttributes: {class: 'img-thumbnail1 img-fluid'}})|raw }}
							
						</div>
					{% set sum = sum + 1 %}
					{% endfor %}

			{%  endif %}
		{% endblock %}
		<div class="ItemStatus">
            <label for="Status">Item Status-</label>
            <select name="Item Status" id="Status">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
        </div>
        <div class="VAM">
            <h1>View All Media</h1>
        </div>
        <div class="MSRP">
            <h1>{{ safetysystems.PriceType }} : ${{ safetysystems.Price }} </h1>
        </div>
        <div class="Available">
            <label for="Available">Item Availablility-</label>
            <select name="Availablility" id="Available">
                <option value="In Stock">In Stock</option>
                <option value="Out of Stock">Out of Stock</option>
              </select>
        </div>
        <div class="LBtn">
            <a href="#" class="btn_1">Save</a>
            <a href="#" class="btn_2">Submit for Approval</a>
            <a href="#" class="btn_3">Cancel</a>  
        </div>
    </div>

{% endblock %}
                











